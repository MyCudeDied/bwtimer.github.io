{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitUseStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "outDir": "dist",
        "lib": ["es6", "dom"],
        "types": ["chrome"]
    },
    "exclude": [
        "node_modules"
    ],
    "files": ["src/script.ts"]
}
